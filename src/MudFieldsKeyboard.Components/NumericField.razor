@typeparam T
@using System.Globalization

<div class="numeric-field">
    <input type="text" 
           class="@CssClass" 
           value="@CurrentValueAsString" 
           @oninput="HandleInput"
           @onfocus="HandleFocus"
           @onblur="HandleBlur"
           placeholder="@Placeholder"
           disabled="@Disabled"
           readonly="@ReadOnly" />
</div>

@code {
    [Parameter]
    public T? Value { get; set; }

    [Parameter]
    public EventCallback<T?> ValueChanged { get; set; }

    [Parameter]
    public string? Placeholder { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; }

    [Parameter]
    public string CssClass { get; set; } = "numeric-field-input";

    [Parameter]
    public EventCallback<FocusEventArgs> OnFocus { get; set; }

    [Parameter]
    public EventCallback<FocusEventArgs> OnBlur { get; set; }

    [Parameter]
    public NumericFieldType FieldType { get; set; }

    private string CurrentValueAsString
    {
        get
        {
            if (Value == null)
                return string.Empty;

            return Value.ToString() ?? string.Empty;
        }
    }

    private async Task HandleInput(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? string.Empty;
        
        if (string.IsNullOrWhiteSpace(input))
        {
            Value = default(T);
            await ValueChanged.InvokeAsync(Value);
            return;
        }

        try
        {
            var type = typeof(T);
            var underlyingType = Nullable.GetUnderlyingType(type) ?? type;

            object? parsedValue = null;

            if (underlyingType == typeof(int))
            {
                if (int.TryParse(input, NumberStyles.Integer, CultureInfo.InvariantCulture, out var intValue))
                    parsedValue = intValue;
            }
            else if (underlyingType == typeof(decimal))
            {
                if (decimal.TryParse(input, NumberStyles.Number, CultureInfo.InvariantCulture, out var decimalValue))
                    parsedValue = decimalValue;
            }
            else if (underlyingType == typeof(double))
            {
                if (double.TryParse(input, NumberStyles.Number, CultureInfo.InvariantCulture, out var doubleValue))
                    parsedValue = doubleValue;
            }
            else if (underlyingType == typeof(string))
            {
                parsedValue = input;
            }

            if (parsedValue != null)
            {
                Value = (T?)parsedValue;
                await ValueChanged.InvokeAsync(Value);
            }
        }
        catch
        {
            // If parsing fails, don't update the value
        }
    }

    private async Task HandleFocus(FocusEventArgs e)
    {
        await OnFocus.InvokeAsync(e);
    }

    private async Task HandleBlur(FocusEventArgs e)
    {
        await OnBlur.InvokeAsync(e);
    }
}
