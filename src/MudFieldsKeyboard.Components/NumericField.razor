@typeparam T
@using System.Globalization
@using System.Text

<div class="numeric-field">
    <input type="text" 
           class="@CssClass" 
           @bind-value="inputText"
           @bind-value:event="oninput"
           @onfocus="HandleFocus"
           @onblur="HandleBlur"
           placeholder="@Placeholder"
           disabled="@Disabled"
           readonly="@ReadOnly" />
</div>

@code {
    [Parameter]
    public T? Value { get; set; }

    [Parameter]
    public EventCallback<T?> ValueChanged { get; set; }

    [Parameter]
    public string? Placeholder { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; }

    [Parameter]
    public string CssClass { get; set; } = "numeric-field-input";

    [Parameter]
    public EventCallback<NumericField<T>> OnFocus { get; set; }

    [Parameter]
    public EventCallback<NumericField<T>> OnBlur { get; set; }

    [Parameter]
    public NumericFieldType FieldType { get; set; }

    private string inputText = string.Empty;
    private bool isInitialized = false;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (Value != null)
        {
            inputText = Value.ToString() ?? string.Empty;
        }
        isInitialized = true;
    }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        if (isInitialized && Value != null && Value.ToString() != inputText)
        {
            inputText = Value.ToString() ?? string.Empty;
        }
    }

    public void AppendCharacter(char c)
    {
        inputText += c;
        ParseAndUpdateValue();
        StateHasChanged();
    }

    public void Backspace()
    {
        if (inputText.Length > 0)
        {
            inputText = inputText.Substring(0, inputText.Length - 1);
            ParseAndUpdateValue();
            StateHasChanged();
        }
    }

    public void Clear()
    {
        inputText = string.Empty;
        ParseAndUpdateValue();
        StateHasChanged();
    }

    private void ParseAndUpdateValue()
    {
        if (string.IsNullOrWhiteSpace(inputText))
        {
            Value = default(T);
            ValueChanged.InvokeAsync(Value);
            return;
        }

        try
        {
            var type = typeof(T);
            var underlyingType = Nullable.GetUnderlyingType(type) ?? type;

            object? parsedValue = null;

            if (underlyingType == typeof(int))
            {
                if (int.TryParse(inputText, NumberStyles.Integer, CultureInfo.InvariantCulture, out var intValue))
                    parsedValue = intValue;
            }
            else if (underlyingType == typeof(decimal))
            {
                if (decimal.TryParse(inputText, NumberStyles.Number, CultureInfo.InvariantCulture, out var decimalValue))
                    parsedValue = decimalValue;
            }
            else if (underlyingType == typeof(double))
            {
                if (double.TryParse(inputText, NumberStyles.Number, CultureInfo.InvariantCulture, out var doubleValue))
                    parsedValue = doubleValue;
            }
            else if (underlyingType == typeof(string))
            {
                parsedValue = inputText;
            }

            if (parsedValue != null)
            {
                Value = (T?)parsedValue;
                ValueChanged.InvokeAsync(Value);
            }
        }
        catch
        {
            // If parsing fails, keep the text but don't update the value
        }
    }

    private async Task HandleFocus()
    {
        await OnFocus.InvokeAsync(this);
    }

    private async Task HandleBlur()
    {
        await OnBlur.InvokeAsync(this);
    }
}
