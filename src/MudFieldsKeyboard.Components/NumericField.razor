@typeparam T
@using System.Globalization
@using System.Text

<div class="numeric-field">
    <input type="text" 
           class="@CssClass" 
           @bind="inputText"
           @bind:event="oninput"
           @onfocus="HandleFocus"
           @onblur="HandleBlur"
           placeholder="@Placeholder"
           disabled="@Disabled"
           readonly="@ReadOnly" />
</div>

@code {
    [Parameter]
    public T? Value { get; set; }

    [Parameter]
    public EventCallback<T?> ValueChanged { get; set; }

    [Parameter]
    public string? Placeholder { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; }

    [Parameter]
    public string CssClass { get; set; } = "numeric-field-input";

    [Parameter]
    public EventCallback<NumericField<T>> OnFocus { get; set; }

    [Parameter]
    public EventCallback<NumericField<T>> OnBlur { get; set; }

    [Parameter]
    public NumericFieldType FieldType { get; set; }

    private string _inputText = string.Empty;
    private string inputText
    {
        get => _inputText;
        set
        {
            if (_inputText != value)
            {
                _inputText = value;
                ParseAndUpdateValue();
            }
        }
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (Value != null)
        {
            _inputText = Value.ToString() ?? string.Empty;
        }
    }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        // Only update inputText from Value if it's being set from outside (not from our own parsing)
        // This prevents the field from resetting during intermediate typing states like "12."
    }

    public void AppendCharacter(char c)
    {
        inputText += c;
        ParseAndUpdateValue();
    }

    public void Backspace()
    {
        if (inputText.Length > 0)
        {
            inputText = inputText.Substring(0, inputText.Length - 1);
            ParseAndUpdateValue();
        }
    }

    public void Clear()
    {
        inputText = string.Empty;
        ParseAndUpdateValue();
    }

    private void ParseAndUpdateValue()
    {
        if (string.IsNullOrWhiteSpace(inputText))
        {
            Value = default(T);
            ValueChanged.InvokeAsync(Value);
            StateHasChanged();
            return;
        }

        try
        {
            var type = typeof(T);
            var underlyingType = Nullable.GetUnderlyingType(type) ?? type;

            object? parsedValue = null;

            if (underlyingType == typeof(int))
            {
                // Allow intermediate state for minus sign (e.g., "-" or "-.")
                var textToParse = inputText.TrimEnd('.');
                if (textToParse == "-")
                {
                    // Don't update value yet, but keep the text display
                    StateHasChanged();
                    return;
                }
                if (int.TryParse(textToParse, NumberStyles.Integer, CultureInfo.InvariantCulture, out var intValue))
                    parsedValue = intValue;
            }
            else if (underlyingType == typeof(decimal))
            {
                // Allow parsing even with trailing decimal point (e.g., "12." should parse as 12)
                // Also allow intermediate state for minus sign (e.g., "-" or "-.")
                var textToParse = inputText.TrimEnd('.');
                if (textToParse == "-")
                {
                    // Don't update value yet, but keep the text display
                    StateHasChanged();
                    return;
                }
                if (decimal.TryParse(textToParse, NumberStyles.Number, CultureInfo.InvariantCulture, out var decimalValue))
                    parsedValue = decimalValue;
            }
            else if (underlyingType == typeof(double))
            {
                // Allow parsing even with trailing decimal point (e.g., "12." should parse as 12)
                // Also allow intermediate state for minus sign (e.g., "-" or "-.")
                var textToParse = inputText.TrimEnd('.');
                if (textToParse == "-")
                {
                    // Don't update value yet, but keep the text display
                    StateHasChanged();
                    return;
                }
                if (double.TryParse(textToParse, NumberStyles.Number, CultureInfo.InvariantCulture, out var doubleValue))
                    parsedValue = doubleValue;
            }
            else if (underlyingType == typeof(string))
            {
                parsedValue = inputText;
            }

            if (parsedValue != null)
            {
                Value = (T?)parsedValue;
                ValueChanged.InvokeAsync(Value);
                StateHasChanged();
            }
        }
        catch
        {
            // If parsing fails, keep the text but don't update the value
        }
    }

    private async Task HandleFocus()
    {
        // Always register with keyboard service
        var layout = DetermineKeyboardLayout();
        var allowDecimal = FieldType == NumericFieldType.Decimal || FieldType == NumericFieldType.Double;
        KeyboardService.Instance.RegisterField(this, layout, allowDecimal);
        
        await OnFocus.InvokeAsync(this);
    }

    private KeyboardLayout DetermineKeyboardLayout()
    {
        return FieldType switch
        {
            NumericFieldType.Integer => KeyboardLayout.Integer,
            NumericFieldType.Decimal => KeyboardLayout.Numeric,
            NumericFieldType.Double => KeyboardLayout.Numeric,
            _ => KeyboardLayout.Text
        };
    }

    private async Task HandleBlur()
    {
        await OnBlur.InvokeAsync(this);
    }
}
